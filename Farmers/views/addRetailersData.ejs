<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Add Retailers Information</a>
            </div>

            

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                      <li>
                          <a href="addFM"><i class="fa fa-table fa-fw"></i> Add Farmers Market</a>
                      </li>
					  <li>
                          <a href="addRetailers"><i class="fa fa-table fa-fw"></i> Add Retailers</a>
                      </li>
					  <li>
                          <a href="addFarmer"><i class="fa fa-table fa-fw"></i> Add Farmers</a>
                      </li>
					  
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Retailers Registration Form
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form" method="post" action="/addRetailers">
                                      

                                        <ul class="nav">
                                            <li>
                                              <div class="form-group">
                                                  <label> Retailers Ethererum Account Address  </label>
                                                  <input class="form-control" id="RID" name="RID" placeholder="Retailers Ethereum Address">
                                              </div>
                                            <li>
                                            <li>
                                                <div class="form-group">
                                                    <label>Retailers Name</label>
                                                    <input class="form-control" id="RName" name="RName" placeholder="Enter Retailers name">
                                                </div>
                                            </li>
                                            
                                                <LI>
                                                        <button type="submit" id="submitData" class="btn btn-default">Submit</button>
                                                        <button type="reset" id="resetData" class="btn btn-default">Reset</button>
                                                </LI>
                                        </ul>

                                    </form>
                                </div>
                            </div>
                            <!-- /.row (nested) -->
                        </div>

                        <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                           
                                            <th>Retailers ID</th>
                                            <th>Retailers Name</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                    
                                        <% if(data.length){ 
                                            for(var i = 0;i < data.length;i++) { %>
                                          <tr>
                                            
                                            <td><%=data[i].ETH_Address%></td>
                                            <td><%=data[i].RatailersName%></td>
                                          </tr>
                                          <% }
                                          }else{ %>
                                          <tr>
                                            <td colspan="2">No user</td>
                                          </tr>
                                        <% } %>
                
                                    </tbody>
                                </table>
                
                            </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="/../vendor/metisMenu/metisMenu.min.js"></script>

